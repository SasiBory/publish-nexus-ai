{
  "manifest_version": 3,
  "name": "Publish Nexus AI",
  "version": "0.1.0",
  "description": "Extensi√≥n para capturar datos de listings y enviarlos a Publish Nexus AI (user-initiated).",
  "permissions": ["activeTab", "scripting", "storage", "notifications"],
  "action": { "default_popup": "popup.html", "default_title": "Publish Nexus AI" },
  "background": { "service_worker": "background.js" },
  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "icons/*"],
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.es/*"
      ]
    }
  ]
}
